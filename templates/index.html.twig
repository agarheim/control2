{% extends 'base.html.twig' %}

{% block title %}Hello, Welcome to My Chat Page!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
<p>{{ form(form) }}</p>
        <h1>Hello! </h1>
        This friendly message is coming from:
        <div class="example-wrapper">
            <table>
                <tr>
                 <td>created</td>
                 <td>content</td>
                </tr>
            {% for chats in chat %}
              <tr>
                <td>{{ chats.DatePub |date("m/d/Y h:m:s")}}</td>
                <td>{{ chats.TextChat }}</td>
              </tr>
            {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}